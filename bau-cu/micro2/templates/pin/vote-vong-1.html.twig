                {% if top25[0].votes > 0 %}
                    <h3>Top 25</h3>
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>Huynh Trưởng</th>
                            <th>Tổng phiếu</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for truong in top25 %}
                            {% if truong.votes > 0 %}
                                <tr>
                                    <td>
                                        <code>{{ truong.name }}</code>
                                    </td>
                                    <td>{{ truong.votes }}</td>
                                </tr>
                            {% endif %}
                        {% endfor %}
                        </tbody>
                    </table>
                {% endif %}

                {% if top25[0].votes > 0 %}
                    <h3>Danh sách còn lại</h3>
                {% endif %}
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Huynh Trưởng</th>
                        <th>Tổng phiếu</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for truong in conLai %}
                        <tr>
                            <td>
                                <code>{{ truong.name }}</code>
                            </td>
                            <td>{{ truong.votes }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </section>
    </main>

    <footer class="text-muted">
