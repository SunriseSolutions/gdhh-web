{% extends 'base.html.twig' %}
{% block title %}Kết quả bầu cử{% endblock %}
{% block body %}
    <header>
        <div class="bg-dark collapse" id="navbarHeader" style="">
            <div class="container">
            </div>
        </div>
        <div class="navbar navbar-dark bg-dark shadow-sm">
            <div class="container d-flex justify-content-between">
                <a href="#" class="navbar-brand d-flex align-items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" stroke="currentColor"
                         stroke-linecap="round" stroke-linejoin="round" stroke-width="2" aria-hidden="true" class="mr-2"
                         viewBox="0 0 24 24" focusable="false">
                        <path d="M23 19a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h4l2-3h6l2 3h4a2 2 0 0 1 2 2z"></path>
                        <circle cx="12" cy="13" r="4"></circle>
                    </svg>
                    <strong>Danh sách bầu cử Vòng 1</strong>
                </a>
                {#                <button class="navbar-toggler collapsed" type="button" data-toggle="collapse"#}
                {#                        data-target="#navbarHeader" aria-controls="navbarHeader" aria-expanded="false"#}
                {#                        aria-label="Toggle navigation">#}
                {#                    <span class="navbar-toggler-icon"></span>#}
                {#                </button>#}
            </div>
        </div>
    </header>

<main role="main">
    <section class="text-left">
        <div class="container">
            {% set url = "#" %}
            <h3>Các Phiếu bầu cho {{ truong.name }}</h3>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Code/Thời gian</th>
                </tr>
                </thead>
                <tbody>
                {% if cacPbt|length == 0 %}
                    <tr>
                        <td><strong>Hiện chưa có phiếu nào.</strong></td>
                    </tr>
                {% endif %}
                {% for phieuBau in cacPbt %}
                <tr>
                    <td>
                        {% block my-vote %}
                        {% if phieuBau.cuTri.pin == pin %}
                            <code style="font-size: larger;"><strong>{{ phieuBau.cuTri.pinFormatted }}</strong></code>
                        {% else %}
                            <strong>{{ phieuBau.cuTri.pinFormatted }}</strong>
                        {% endif %}
                        {% endblock %}
                        <br>
                        {{ phieuBau.createdAt|date('H:i:s', 'Asia/Saigon') }}
                    </td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </section>
</main>

<footer class="text-muted">
    <div class="container">
    </div>
</footer>

{% endblock %}

{% block javascripts %}
{% endblock %}